---
import { SearchInput } from "../../components/Input";
import BaseLayout from "../../BaseLayout.astro";
import {
    twitterDownloaderContent,
    twitterPageProps,
    placeholder,
} from "../../content/content-hi";
import AboutSection from "../../partials/twitter/AboutSection.astro";
import HowToSection from "../../partials/twitter/HowToSection.astro";
---

<BaseLayout
    title={twitterDownloaderContent.title}
    lang="hi"
    pageProps={twitterPageProps}
>
    <div class="container">
        <p class="lead text-center">{twitterDownloaderContent.description}</p>
        <SearchInput client:load placeholder={placeholder} />
        <AboutSection content={twitterDownloaderContent.aboutSection} />
        <HowToSection howTo={twitterDownloaderContent.howTo} />
    </div>
</BaseLayout>
