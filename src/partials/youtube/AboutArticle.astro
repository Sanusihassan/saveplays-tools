---
import type { youtubeDownloaderContentType } from "../../content/content";

const { about } = Astro.props as youtubeDownloaderContentType;
---

<section class="container">
    <article class="about-article">
        <p class="lead">
            <strong>{about.p1.yt}</strong>
            {about.p1.text}
        </p>

        <p>
            {about.p2}
        </p>

        <p class="feature">
            <strong>{about.feature.site}</strong>
            {about.feature.text}
        </p>

        <p>
            {about.p3}
        </p>

        <p>
            {about.p4}
        </p>
    </article>
</section>

<style lang="scss">
    .container {
        .about-article p {
            font-size: 1rem;
            line-height: 1.6;
            margin-bottom: 1.5rem;
            color: #333;

            strong {
                color: #2196f3;
            }

            &.lead {
                font-size: 1.2rem;
                color: #000;
            }

            &.feature {
                padding-left: 1rem;
                border-left: 3px solid #2196f3;
            }
        }
    }
</style>
